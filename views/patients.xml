       <record id="view_hospital_patient_tree" model="ir.ui.view">
            <field name="name">hospital.patient.tree</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <tree string="Patients">
                    <field name="name"/>
<!--                    <field name="date_of_birth"/>-->
                    <field name="age"/>
                    <field name="gender"/>
                    <field name="phone"/>
                    <field name="email"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_hospital_patient_form" model="ir.ui.view">
            <field name="name">hospital.patient.form</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <form string="Patient Information">
                      <header>
                          <button name="action_view_appointments"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-calendar">
                             <field name="appointment_count" widget="statinfo"/>
                          </button>
                          <button name="my_hospital.add_appointment_wizard"
                                  context="{'default_patient_id': active_id}"
                                  string="Add Appointment"
                                  type="action" class="oe_highlight"/>
                      </header>
                    <sheet>
                        <group string="Personal Information">
                            <field name="name"/>
<!--                            <field name="date_of_birth"/>-->
                            <field name="age" />
                            <field name="gender"/>
                            <field name="national_id"/>
                            <field name="address"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="emergency_contact"/>
                            <field name="marital_status"/>
                            <field name="occupation"/>
                        </group>

                        <group string="Medical History">
                            <field name="past_illnesses"/>
                            <field name="family_history"/>
                            <field name="allergies"/>
                            <field name="immunizations"/>
                            <field name="ongoing_treatments"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


    <record id="my_hospital.action_patients" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add new patient..
            </p>
        </field>
    </record>

</odoo>