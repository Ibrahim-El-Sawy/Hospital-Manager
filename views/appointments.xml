
<odoo>
    <record id="appointment_tree" model="ir.ui.view">
        <field name="name">the.appointments.tree</field>
        <field name="model">the.appointments</field>
        <field name="arch" type="xml">
            <tree string="Appointments">
                <field name="name" />
                <field name="patient_id" />
                <field name="doctor_id" />
                <field name="patient_age" />
                <field name="app_date" />
                <field name="notes" />
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="appointment_form" model="ir.ui.view">
        <field name="name">the.appointments.form</field>
        <field name="model">the.appointments</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_coniform"
                            string="Coniform"
                            type="object"
                            class="oe_highlight"
                           invisible = "state != 'draft'"
                    />

                    <button name="action_done"
                            string="Done"
                            type="object"
                            class="oe_highlight"
                            invisible = "state != 'coniform'"
                    />

                    <button name="action_cancel"
                            string="Cancel"
                            type="object"
                            invisible = "state in ('done', 'cancel')"
                    />
                    <field widget="statusbar" statusbar_visible="draft,coniform,done" name="state"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="app_date"/>
                        </group>
                        <group>
                            <field name="patient_id"/>
                            <field name="patient_age"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                    <group>
                        <field name="doctor_id"/>
                        <field name="doctor_notes"/>
                    </group>
                    <notebook>
                            <page string="The Prescription">
                                 <field name = 'prescription_ids' />
                            </page>
                            <page string="Note of Doctor">
                                <group>
                                   <field name="doctor_notes"/>
                                </group>
                            </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>

            </form>
        </field>
    </record>

     <record id="the_prescription_form" model="ir.ui.view">
        <field name="name">the.prescription.form</field>
        <field name="model">the.prescription</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </group>
            </form>
        </field>
    </record>
    <record id="the_prescription_tree" model="ir.ui.view">
        <field name="name">the.prescription.tree</field>
        <field name="model">the.prescription</field>
        <field name="arch" type="xml">
            <tree string="Prescription">
                <field name="name"/>
                <field name="notes"/>
            </tree>
        </field>
    </record>

    <record id="my_hospital.action_appointments" model="ir.actions.act_window">
        <field name="name">appointments</field>
        <field name="res_model">the.appointments</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                 Make the first appointment......
            </p>
        </field>
   </record>
</odoo>